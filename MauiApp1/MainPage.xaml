<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="#6A5ACD"
             Shell.NavBarIsVisible="False">

    <!-- Center Content Dynamically -->
    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Card Container -->
        <Border BackgroundColor="White"
                Padding="25"
                StrokeThickness="1"
                WidthRequest="450" HeightRequest="590">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>

            <VerticalStackLayout>
                <!-- Title -->
                <Label Text="fMaster"
                       FontSize="30"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <!-- Subtitle -->
                <Label Text="Enter your email address and password to access your account."
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="Gray"
                       Padding="30,10"
                       Margin="0,5,0,15"
                       HorizontalTextAlignment="Center"/>

                <!-- Email Input -->
                <Label Text="Email address"
                       FontSize="14"
                       TextColor="Black"/>
                <Entry x:Name="entryEmail"
                       Placeholder="Enter your email"
                       Keyboard="Email"
                       BackgroundColor="LightGray"
                       Margin="0,5,0,15"/>

                <!-- Password Input -->
                <Label Text="Password"
                       FontSize="14"
                       TextColor="Black"/>
                <HorizontalStackLayout>
                    <Entry x:Name="entryPassword"
                           IsPassword="True"
                           Placeholder="Enter your password"
                           BackgroundColor="LightGray"
                           WidthRequest="345"/>
                    <Button Text="👁" Clicked="OnTogglePassword"/>
                </HorizontalStackLayout>

                <!-- Remember Me Checkbox -->
                <HorizontalStackLayout VerticalOptions="Center"
                                       Margin="0,10,0,10">
                    <CheckBox x:Name="chkRememberMe"/>
                    <Label Text="Remember me"
                           FontSize="14"
                           TextColor="Black"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Login Button -->
                <Button Text="Log In"
                        BackgroundColor="#6A5ACD"
                        TextColor="White"
                        FontSize="16"
                        CornerRadius="5"
                        Clicked="OnLoginClicked"/>

                <!-- Forgot Password & Sign Up Links -->
                <VerticalStackLayout HorizontalOptions="Center"
                                     Margin="10,20,10,0">
                    <HorizontalStackLayout Margin="10,20,10,10">
                        <Label Text="Forgot your password?"
                               FontSize="12"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                        <Button Text="Forgot password" Clicked="OnForgotPassword"/>
                    </HorizontalStackLayout>

                   
                   
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
